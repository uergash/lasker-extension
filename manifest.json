{
  "manifest_version": 3,
  "name": "Lasker",
  "version": "1.1.0",
  "description": "Capture voice feedback and extract insights from customer emails",
  "permissions": [
    "storage",
    "activeTab",
    "offscreen",
    "tabs"
  ],
  "host_permissions": [
    "https://*.supabase.co/*",
    "https://*.functions.supabase.co/*",
    "https://mail.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon48.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content-scripts/gmail.js"],
      "css": ["content-scripts/gmail.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["https://mail.google.com/*"]
    }
  ]
}


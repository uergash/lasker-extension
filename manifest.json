{
  "manifest_version": 3,
  "name": "Lasker",
  "version": "1.0.0",
  "description": "Record voice feedback and automatically process it into product insights",
  "permissions": [
    "storage",
    "activeTab",
    "offscreen"
  ],
  "host_permissions": [
    "https://*.supabase.co/*",
    "https://*.functions.supabase.co/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon48.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}

